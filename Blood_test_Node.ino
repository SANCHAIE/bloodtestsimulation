// OTA Handling Task
void handleOTA() {
  if (!otaMode) return; // Only handle OTA in update mode
  server.handleClient();
  ElegantOTA.loop();
}

// Button Check Task
void checkButton() {
  if (otaMode) return; // Disable button function in OTA mode

  static bool lastButtonState = HIGH;
  bool buttonState = digitalRead(BUTTON_PIN);

  if (buttonState == LOW && lastButtonState == HIGH) {
    Serial.println("Button Pressed! Showing Blood Bitmap.");
    buttonPressed = true;
    bloodStartTime = millis(); // Start timer for 5 seconds
  } 
  else if (buttonState == HIGH && lastButtonState == LOW) {
    Serial.println("Button Released! Resuming Blinking.");
    buttonPressed = false;
  }

  lastButtonState = buttonState;
}

// Check OTA Button Task
void checkOTAButton() {
  static unsigned long pressStartTime = 0;
  static bool lastButtonState = HIGH;
  bool buttonState = digitalRead(OTA_BUTTON_PIN);

  if (buttonState == LOW && lastButtonState == HIGH) {
    pressStartTime = millis(); // Start counting time
  }
  else if (buttonState == HIGH && lastButtonState == LOW) {
    if (millis() - pressStartTime >= 5000) { // Button held for 5 sec
      enterOTAMode();
    }
  }

  lastButtonState = buttonState;
}

// Enter OTA Mode
void enterOTAMode() {
  Serial.println("Entering OTA Mode...");
    // WiFi Setup
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nConnected to WiFi!");
  Serial.print("IP Address: ");
  Serial.println(WiFi.localIP());

  // OTA Setup
  server.on("/", []() { server.send(200, "text/plain", "Hi! This is ElegantOTA Demo."); });
  ElegantOTA.begin(&server);
  ElegantOTA.onStart(onOTAStart);
  ElegantOTA.onProgress(onOTAProgress);
  ElegantOTA.onEnd(onOTAEnd);
  server.begin();
  Serial.println("HTTP Server started.");
  otaMode = true;

  // Blink LCD backlight 3 times
  for (int i = 0; i < 3; i++) {
    digitalWrite(LCD_BACKLIGHT, HIGH);
    delay(500);
    digitalWrite(LCD_BACKLIGHT, LOW);
    delay(500);
  }

  // Display OTA Update Mode
  displayUpdateMode();

  // Disable regular tasks
  taskUpdateLCD.disable();
  taskCheckButton.disable();

  // Enable OTA task
  taskHandleOTA.enable();
}

